
<UserControl x:Class="FanCustomControl.FanUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FanCustomControl"
             mc:Ignorable="d" 
             >
    <StackPanel Background="White">
        <local:CustomFanControl Margin="0,0,0,30" FanOn="{Binding Mode=TwoWay, Path=IsChecked ,ElementName=switch}"/>
        <CheckBox x:Name="switch" HorizontalAlignment="Center"  Content="Switch"/>
    </StackPanel>
</UserControl>
