<Window
    x:Class="WpfSweetAlert.ConfirmationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Confirmation Required"
    MinWidth="350"
    AllowsTransparency="True"
    Background="White"
    BorderBrush="#AAAAAA"
    BorderThickness="1"
    FontFamily="Segoe UI"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <StackPanel Margin="20">

        <Border
            Width="50"
            Height="50"
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            Background="#F0AD4E"
            CornerRadius="50">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="36"
                FontWeight="Bold"
                Foreground="White"
                Text="!" />
        </Border>

        <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#333333"
            Text="Are you sure?" />

        <TextBlock
            Name="txtMessage"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="14"
            Foreground="#666666"
            Text="Please confirm if you want to proceed with this potentially destructive action."
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

            <Button
                Name="btnConfirm"
                Margin="0,0,10,0"
                Padding="15,8"
                Background="#5CB85C"
                BorderThickness="0"
                Click="btnConfirm_Click"
                Content="Yes, Proceed!"
                Cursor="Hand"
                Foreground="White"
                IsDefault="True" />

            <Button
                Name="btnCancel"
                Padding="15,8"
                Background="#D9534F"
                BorderThickness="0"
                Click="btnCancel_Click"
                Content="Cancel"
                Cursor="Hand"
                Foreground="White"
                IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>
